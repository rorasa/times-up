{
  "manifest_version": 2,
  "name": "Facebook Watcher",
  "version": "0.2",
  "description": "Stop you from spending too much time on Facebook!",
  "background": { 
     "scripts": ["background.js"], 
     "persistent": true
  },
  "options_page": "options.html",
  "page_action" :
  {
    "default_icon" : "icon-19.png",
    "default_title" : "Facebook Watcher",
    "default_popup": "popup.html"
  },
  "permissions" : [
    "tabs",
    "webNavigation",
    "storage",
    "alarms"
  ],
  "icons" : {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  }
}
